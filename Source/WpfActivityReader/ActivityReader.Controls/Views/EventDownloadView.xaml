<Window x:Class="ActivityReader.Controls.Views.EventDownloadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading Events" Height="117" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="78*" />
            <RowDefinition Height="183*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock x:Name="StatusTextBlock" Text="{Binding Path=Status}" />    
        </StackPanel> 
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,7,7">
            <Button x:Name="BeginButton" Content="Begin" Command="{Binding Path=DownloadCommand}" Padding="5,0,5,0" Margin="0,0,7,0" />
            <Button x:Name="CancelButton" Content="Cancel" Padding="5,0,5,0" />
        </StackPanel>
    </Grid>
</Window>
