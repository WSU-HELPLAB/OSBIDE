@using OSBIDE.Web.Models.Analytics
@using OSBIDE.Data.DomainObjects


@Styles.Render("~/Content/bootstrap.css")

<section data-tab="Analytics" id="calendar-section">

    <div class="col-xs-4"></div>
    <div data-wzstep="@WizardSteps.DataVisualization">
        <h2>CptS 121 Calendar</h2>

        @using (Html.BeginForm("GetMeasures", "Calendar", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="row">
                <div class="col-xs-2"></div>
                <div class="col-xs-2">
                    <h4>Programming Effort</h4>
                    <div><input type="checkbox" id="numberOfLines" name="NumberOfLines" /><label for="numberOfLines">Lines of code written</label></div>
                    <div><input type="checkbox" id="timeSpent" name="TimeSpent" /><label for="timeSpent">Time spent</label></div>
                </div>
                <div class="col-xs-2">
                    <h4>Compilation Behavior</h4>
                    <div><input type="checkbox" id="numberOfCompilations" name="NumberOfCompilations" /><label for="numberOfCompilations"># compilations</label></div>
                    <div><input type="checkbox" id="errorQuotient" name="ErrorQuotient" /><label for="errorQuotient">Error quotient</label></div>
                    <div><input type="checkbox" id="errorTypes" name="ErrorTypes" /><label for="errorTypes">Error types</label></div>
                </div>
                <div class="col-xs-2">
                    <h4>Execution Behavior</h4>
                    <div><input type="checkbox" id="numberOfExecutions" name="NumberOfExecutions" /><label for="numberOfExecutions"># executions</label></div>
                    <div><input type="checkbox" id="runtimeErrorTypes" name="RuntimeErrorTypes" /><label for="runtimeErrorTypes">Runtime error types</label></div>
                    <div><input type="checkbox" id="numberOfBreakpoints" name="NumberOfBreakpoints" /><label for="numberOfBreakpoints"># breakpoints set</label></div>
                    <div><input type="checkbox" id="numberOfDebuggingSessions" name="NumberOfDebuggingSessions" /><label for="numberOfDebuggingSessions"># debugging sessions</label></div>
                </div>
                <div class="col-xs-2">
                    <h4>Help Behavior</h4>
                    <div><input type="checkbox" id="numberOfPosts" name="NumberOfPosts" /><label for="numberOfPosts"># posts</label></div>
                    <div><input type="checkbox" id="runtimeOfReplies" name="RuntimeOfReplies" /><label for="runtimeOfReplies"># replies</label></div>
                    <div><input type="checkbox" id="averageReplyTime" name="AverageReplyTime" /><label for="averageReplyTime">#Avg. reply time</label></div>
                </div>
            </div>
        }

        <div class="row calendar-section">
            <div class="col-xs-3"></div>
            <div class="col-xs-9">
                <div id="no-data-message">
                    There is no data available.
                </div>
                <div id="calendar">
                    <div class="row">
                        <div class="col-xs-5"><h4 id="currentMonth">May 2013</h4></div>
                        <div class="col-xs-3">
                            <button id="back" name="back"><</button>
                            <button id="forward" name="forward">></button>
                        </div>
                    </div>

                    <div id="chart"></div>
                </div>
                <div id="hourly">
                    <div class="row">
                        <div class="col-xs-5"><h4 id="currentDay">December 21, 2014</h4></div>
                        <div class="col-xs-3"><a href="javascript:">back to calendar view</a></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-7">
                            The chart is populated by randomly generated data based on the checkbox selections, they do not necessarily agree with the data on the calendar view.
                            When both charts are populated by the real data, the data on the two views should agree.
                        </div>
                    </div>
                    <div id="hourlychart"></div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/d3/3.5.2/d3.min.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/d3-tip/0.6.3/d3-tip.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script type="text/javascript" src="~/Scripts/Calendar/TrendingCalendar.js"></script>
    <script type="text/javascript" src="~/Scripts/Calendar/Calendar.js"></script>
}
